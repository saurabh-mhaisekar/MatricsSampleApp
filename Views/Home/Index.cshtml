<!DOCTYPE html>
<html>
<head>
    <title>Home Page</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
            padding: 20px;
        }

        .text-center {
            text-align: center;
            margin-bottom: 20px;
        }

        .display-4 {
            font-size: 24px;
            margin-top: 0;
        }

        a {
            color: #337ab7;
            text-decoration: none;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f5f5f5;
            font-weight: bold;
        }

        .hide {
            display: none;
        }

        .add-button {
            margin-top: 10px;
        }

        .delete-button {
            background-color: #f44336;
            color: white;
            padding: 6px 12px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-weight: bold;
        }

            .delete-button:hover {
                background-color: #d32f2f;
            }
    </style>
</head>
<body>
    @if (Model.Count > 0)
    {
        <div>
            <h2>Person List</h2>
            <table>
                <thead>
                    <tr>

                        <th>Name</th>
                        <th>Age</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var person in Model)
                    {
                        <tr>
                            <td>@person.Name</td>
                            <td>@person.Age</td>
                            <td>
                                <form method="post" action="@Url.Action("DeletePerson", "Home")" onsubmit="return confirm('Are you sure you want to delete this person?');">
                                    <input type="hidden" name="id" value="@person.Id" />
                                    <button type="submit" class="delete-button">Delete</button>
                                </form>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
        <div class="text-center add-button">
            <a href="@Url.Action("NewPerson", "Home")" class="button">Add New Person</a>
        </div>
    }
    else
    {
        <div class="text-center">
            <p>No persons found.</p>
            <div class="add-button">
                <a href="@Url.Action("NewPerson", "Home")" class="button">Add New Person</a>
            </div>
        </div>
    }
</body>
</html>